{
	"private": true,
	"name": "lodex-workers-python",
	"version": "4.0.3",
	"description": "Lodex workers for python",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Inist-CNRS/ezmaster-apps.git"
	},
	"keywords": [
		"ezmaster"
	],
	"author": "Nicolas Thouvenin <nthouvenin@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Inist-CNRS/ezmaster-apps/issues"
	},
	"homepage": "https://github.com/Inist-CNRS/ezmaster-apps/tree/main/applications/lodex-workers-python#readme",
	"scripts": {
		"version:insert": "sed -i \"s#\\(${npm_package_name}.\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" README.md && git add README.md",
		"version:tag": "git tag \"${npm_package_name}@${npm_package_version}\" -m \"${npm_package_name}@${npm_package_version}\"",
		"version:push": "git push && git push --tags",
		"version": "npm run version:insert",
		"postversion": "npm run version:push && npm run build && npm run publish",
		"build": "docker build -t inistcnrs/lodex-workers-python:${npm_package_version} .",
		"prestart": "npm run build",
		"start": "docker run --rm -p 31976:31976 inistcnrs/lodex-workers-python:${npm_package_version}",
		"publish": "docker push inistcnrs/lodex-workers-python:${npm_package_version}"
	}
}
