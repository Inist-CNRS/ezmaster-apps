	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Inist-CNRS/ezmaster-apps/issues"
	},
	"homepage": "https://github.com/Inist-CNRS/ezmaster-apps/tree/main/applications/lodex-workers-python#readme",
	"scripts": {
		"insertversion:readme": "sed -i \"s#\\(lodex-workers-python:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" README.md",
		"version": "npm run insertversion:readme && git add README.md",
		"postversion": "git commit -m \"release ${npm_package_version}\" README.md package.json && npm run build && npm run publish",
		"build": "docker build -t inistcnrs/lodex-workers-python:${npm_package_version} .",
		"prestart": "npm run build",
		"start": "docker run --rm -p 31976:31976 inistcnrs/lodex-workers-python:${npm_package_version}",
		"publish": "git push && git push --tags && docker push inistcnrs/lodex-workers-python:${npm_package_version}"
	}
}
